@page "/Login"
@using AdminPortal.Web.Pages.Identity.Actions
@model LoginModel

<div class="jumbotron" style="min-height: 100%; min-width: 100%;">
	<div class="modal-title text-center">
		<h1 style="color: blue;">Welcome to the Admin Portal</h1>
	</div>
	<div class="text-center" style="margin-bottom: 5%;">
		@if (LoginModel.InvalidEntry)
		{
			<h6 style="color: red">Invalid Username or Password</h6>
		}
	</div>
	<form method="post">
		<div class="form-group text-center">
			<div>
				<input name="phoneNumber" class="form-control input-group" value="" placeholder="Phone Number" type="number"
					   style="margin-bottom: 2%;" />
				<input name="password" class="form-control input-group" value="" placeholder="Password" type="password"
					   style="margin-bottom: 2%;" />
				<button class="btn btn-primary" type="submit">
					Log In
				</button>
			</div>
		</div>
	</form>
</div>
