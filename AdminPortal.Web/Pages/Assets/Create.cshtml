@page "/Assets/Create/{zip?}"
@model AdminPortal.Web.Pages.Assets.CreateModel

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Asset</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="d-flex flex-row form-group">
				<select asp-for="Asset.Area" asp-items="Model.Locations"
						class="btn btn-secondary" style="background-color: blueviolet;">
					<option value="0">select area</option>
				</select>
				<a asp-page="/Locations/Add" class="btn btn-secondary" 
				   style="background-color: blueviolet; width: 10%;">+</a>
			</div>
			<div class="form-group">
				<label asp-for="Asset.Latitude" class="control-label"></label>
				<input asp-for="Asset.Latitude" class="form-control" />
				<span asp-validation-for="Asset.Latitude" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Asset.Longitude" class="control-label"></label>
				<input asp-for="Asset.Longitude" class="form-control" />
				<span asp-validation-for="Asset.Longitude" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
